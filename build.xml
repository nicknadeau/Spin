<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." name="spin">

    <property name="workspace" value="."/>
    <property name="clientModule" value="${workspace}/Client"/>

    <target name="build-standalone">
        <echo message="Building Client module..."/>
        <ant inheritAll="false" antfile="${clientModule}/build.xml" target="build-standalone">
            <property name="compile.debug" value="${compile.debug}"/>
        </ant>
    </target>

    <target name="clean">
        <echo message="Cleaning Client module..."/>
        <ant inheritAll="false" antfile="${clientModule}/build.xml" target="clean">
            <property name="compile.debug" value="${compile.debug}"/>
        </ant>
    </target>

</project>
