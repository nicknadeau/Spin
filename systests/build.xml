<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="spin-systests">

    <property name="workspace" value="."/>
    <property name="autogenerated-files" value="${workspace}/autogen"/>
	<property name="test" value="${autogenerated-files}/test"/>
    <property name="build-dir" value="${workspace}/build"/>
    <property name="built-tests" value="${build-dir}/test"/>

    <path id="classpath-test">
        <pathelement location="${workspace}/junit-4.12.jar"/>
    </path>

    <target name="build" depends="clean-build-dir">
        <mkdir dir="${built-tests}"/>
        <javac debug="true" debuglevel="source,lines,vars" includeantruntime="false" release="9" srcdir="${test}" destdir="${built-tests}" includes="**/*.java,module-info.java">
            <classpath>
                <path refid="classpath-test"/>
            </classpath>
        </javac>
    </target>

    <target name="clean-build-dir">
        <delete dir="${build-dir}"/>
    </target>

    <target name="clean">
        <delete dir="${build-dir}"/>
        <delete dir="${autogenerated-files}"/>
        <delete dir="${dependencies}"/>
    </target>

</project>
